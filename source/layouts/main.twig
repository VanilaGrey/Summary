<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ projectName ~ ' : ' ~ pageHeading }}</title>
		{% if description %}
			<meta name="description" content="{{ description }}">
		{% endif %}
		<link rel="stylesheet" href="{{ rootPath }}styles/main.css{{ version }}">

		{% for weight in [400, 700] %}
			<link rel="preload" href="fonts/ptsans-{{ weight }}.woff2" as="font" crossorigin="anonymous">
		{% endfor %}
	</head>
	<body>
		<div class="page {{ isIndex ?: 'page--inner' }} container">
			{% include 'blocks/page-header.twig' %}

			<main>
				{% block main %}{% endblock %}
			</main>

			{% include 'blocks/page-footer.twig' %}
		</div>

		{% block modal %}{% endblock %}

		<script src="{{ rootPath }}scripts/main.js{{ version }}"></script>
	</body>
</html>
